<h1>Welcome to Hot Trackz!</h1>

<hr>

<h2>Create a New Trackzfile</h2>

<form action="/users" method="POST">
  <label>
    Name:
    <input name="name" />
  </label><br>

  <label>
    Email:
    <input name="email" />
  </label><br>

  <label>
    Password:
    <input name="password" type="password"/>
  </label><br>

   <label>
    Location:
    <input name="location" />
   </label><br>

   <label>
    Favorite Artist:
    <input name="favorite_artist" />
   </label><br>

   <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">

  <button>Submit</button>
</form>
